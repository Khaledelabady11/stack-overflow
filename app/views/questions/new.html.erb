<!-- app/views/questions/index.html.erb -->

<h1>Questions</h1>

<!-- Show a form for creating a new question -->
<%= form_with(model: @question, url: questions_path, local: true, class: "mb-3", data: { target: "question.form" }) do |form| %>
  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control", placeholder: "What's your question?" %>
  </div>

  <%= form.submit "Ask", class: "btn btn-primary" %>
<% end %>
