<h1>Login</h1>

<%= form_with(url: '/login', method: 'post') do |form| %>
  <% if flash[:error] %>
    <div id="error_explanation">
      <h2><%= flash[:error] %></h2>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email %><br>
    <%= form.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit "Login" %>
  </div>
<% end %>
